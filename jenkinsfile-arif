pipeline 
{
    agent any
    tools
    {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven"
    }
    stages
    {
        stage('fetch the code')
        {
            steps
            {
                // Get some code from a GitHub repository
                git branch: 'develop', credentialsId: 'arif-github', url: 'https://github.com/mkharif/java-db-Login.git'
            }
           
        }
       
        stage('Build the code')
        {
            steps
            {
                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
            post
            {
                // If Maven was able to run the tests, even if some of the test
                // failed, record the test results and archive the jar file.
                success
                {
                    deploy adapters: [tomcat8(credentialsId: 'tomcat-admin', path: '', url: 'http://172.31.46.245:8080/')], contextPath: 'Arif-Pipeline', war: '**/*.war'
                }
            }
        }
    }
}
